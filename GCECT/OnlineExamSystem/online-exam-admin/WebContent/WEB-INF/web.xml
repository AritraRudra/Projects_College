<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>online-exam-admin</display-name>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	<context-param>
		<param-name>driver</param-name>
		<param-value>com.mysql.jdbc.Driver</param-value>
	</context-param>
	<context-param>
		<param-name>url</param-name>
		<param-value>jdbc:mysql://localhost:3306/onlineexam</param-value>
	</context-param>
	<context-param>
		<param-name>usr</param-name>
		<param-value>admin</param-value>
	</context-param>
	<context-param>
		<param-name>passwd</param-name>
		<param-value>Groot</param-value>
	</context-param>
	<servlet>
		<description></description>
		<display-name>AdminLoginServlet</display-name>
		<servlet-name>AdminLoginServlet</servlet-name>
		<servlet-class>login.AdminLoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AdminLoginServlet</servlet-name>
		<url-pattern>/AdminLoginServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>AddSubjectServlet</display-name>
		<servlet-name>AddSubjectServlet</servlet-name>
		<servlet-class>add_subject.AddSubjectServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddSubjectServlet</servlet-name>
		<url-pattern>/AddSubjectServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>AddQuestionServlet</display-name>
		<servlet-name>AddQuestionServlet</servlet-name>
		<servlet-class>add_quest.AddQuestionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddQuestionServlet</servlet-name>
		<url-pattern>/AddQuestionServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>AllExamHistoryServlet</display-name>
		<servlet-name>AllExamHistoryServlet</servlet-name>
		<servlet-class>allhistory.AllExamHistoryServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AllExamHistoryServlet</servlet-name>
		<url-pattern>/AllExamHistoryServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>AdminControlServlet</display-name>
		<servlet-name>AdminControlServlet</servlet-name>
		<servlet-class>login.AdminControlServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AdminControlServlet</servlet-name>
		<url-pattern>/AdminControlServlet</url-pattern>
	</servlet-mapping>
	<servlet>
		<description></description>
		<display-name>ConfirmPageServlet</display-name>
		<servlet-name>ConfirmPageServlet</servlet-name>
		<servlet-class>add_quest.ConfirmPageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ConfirmPageServlet</servlet-name>
		<url-pattern>/ConfirmPageServlet</url-pattern>
	</servlet-mapping>

	<resource-env-ref>
		<resource-env-ref-name>datasource/online_exam</resource-env-ref-name>
		<resource-env-ref-type>javax.sql.DataSource</resource-env-ref-type>
	</resource-env-ref>
